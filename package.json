{
  "name": "androidtv-remote-cli",
  "version": "1.1.1",
  "description": "Android TV remote control CLI",
  "license": "MIT",
  "author": {
    "name": "MartÃ­n M.",
    "url": "https://github.com/skydiver/"
  },
  "type": "module",
  "main": "build/tvrc",
  "scripts": {
    "build": "pnpm clean && tsx esbuild.config.ts && chmod +x build/tvrc",
    "clean": "rimraf build",
    "dev": "tsx watch src/index.ts",
    "lint:check": "biome check .",
    "lint:fix": "biome check --fix .",
    "lint:format": "biome format --write .",
    "start": "tsx src/index.ts",
    "test": "vitest src",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "conf": "^15.0.2",
    "crypto-js": "^4.2.0",
    "enquirer": "^2.4.1",
    "node-forge": "^1.3.1",
    "protobufjs": "^7.5.4",
    "systeminformation": "^5.27.11"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.18.8",
    "@types/node-forge": "^1.3.14",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
